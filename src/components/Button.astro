---
const { variant, size } = Astro.props;
---

<button class={(variant, size)}>
  <slot />
</button>

<style>
  button {
    padding: 1rem;
  }
  .primary {
    background-color: darkblue;
    color: white;
  }
  .secondary {
    background-color: white;
    color: darkblue;
  }
  .small {
    font-size: 1rem;
  }
  .medium {
    font-size: 2rem;
  }
  .large {
    font-size: 3rem;
  }
</style>
