<style>
  ul {
    list-style: none;
    padding: 0;
  }
  li a {
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
    gap: 16px;
    height: 40px;
  }
  svg {
    height: 25px;
    fill: var(--grey_text);
    margin: 0;
  }
  li a:hover svg {
    fill: var(--white);
  }
  li a:hover p {
    color: var(--white);
  }

  li .active p {
    color: var(--white);
  }
  li .active svg {
    fill: var(--white);
  }
  section {
    background-color: var(--black1);
    height: 100%;
    width: 195px;
    margin-left: 0;
    padding-right: 24px;
    padding-left: 24px;
    padding-top: 24px;
    display: flex;
    flex: 1;
    flex-direction: column;
    position: fixed;
  }

  .banner {
    margin-bottom: 30px;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
  }

  .banner img {
    max-width: 131px;
  }

  .playlist {
    margin-top: 30px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    flex-grow: 1;
  }

  .playlist_button {
    display: flex;
    gap: 16px;
    align-items: center;
    cursor: pointer;
  }

  .playlist_button:hover p {
    color: white;
  }

  .playlist_square {
    height: 24px;
    width: 24px;
    background-color: var(--white);
    border-radius: 2px;
    opacity: 0.6;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .playlist_button:hover .playlist_square {
    opacity: 1;
  }
  .playlist_square svg {
    border-radius: 2px;
    fill: var(--black1);
    height: 12px;
    width: 12px;
    padding: 1px;
  }
  .playlist_square.blue {
    background: linear-gradient(135deg, #450af5, #c4efd9);
  }
  .playlist_square.blue svg {
    fill: white;
  }

  .bottom {
    color: var(--grey_text);
    margin-bottom: 130px;
  }
  .bottom p {
    margin-bottom: 24px;
    cursor: pointer;
    font-size: 0.7rem;
  }
  .bottom p:hover {
    text-decoration: underline;
  }

  button {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 7px;
    background-color: transparent;
    border-radius: 500px;
    min-block-size: 32px;
    border: solid 1px var(--grey_text);
    color: white;
    padding: 1px 15px;
    cursor: pointer;
  }
  button svg {
    margin: 0;
    fill: white;
  }

  button:hover {
    border: solid 1.4px var(--white);
    scale: 1.05;
  }
</style>
